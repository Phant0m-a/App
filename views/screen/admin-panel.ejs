<div class="container">

    <h3>Admin Panel</h3>
    <hr>
    <br>
    <form  id="#form" for="/admin" method="POST">
    <br>
    <div class="form-group">
        <label >Writing About</label>
        <br>
        <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <label class="btn btn-secondary active">
              <input type="radio" name="options" id="option1" value="mySelf" checked> Myself
            </label>
            <label class="btn btn-secondary">
              <input type="radio" name="options" id="option2" value="himSelf"> Himself
            </label>
            <label class="btn btn-secondary">
              <input type="radio" name="options" id="option3" value="herSelf"> Herself
            </label>
          </div>
    </div>
    <label for="question">Add New Question</label>
     <div class="form-group">
        <input class="form-control"  name="question" type="text" placeholder="Enter the question" minlength='10' maxlength="250" autocomplete="off">
     </div>
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>

  <br>  
  
<div class="container">
  
    <h3>Question List</h3>
    
    <br>
    <form  action="/screen/new-page" method="POST">
        <select class="custom-select" name="select">
            <!-- <option selected value="none">Question list</option> -->
            <option value="none" disabled selected>Select Question list Type</option>
            <option value="mySelf">Myself</option>
            <option value="himSelf">Himself</option>
            <option value="herSelf">Herself</option>
          </select>
          <br>
          <br>
          <button type="submit" class="btn btn-primary">Get</button>
    </form>
    <br>
    <br>
    <br>
  
</div>

